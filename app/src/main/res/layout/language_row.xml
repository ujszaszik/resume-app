<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="languageData"
            type="hu.ujszaszik.resumeapp.resume.personal.language.LanguageData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/languageImage"
            android:layout_width="@dimen/language_image_size"
            android:layout_height="@dimen/language_image_size"
            android:layout_marginStart="@dimen/margin_big"
            android:layout_marginTop="@dimen/margin_default"
            app:languageFlag="@{languageData.flag}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/quoteDescription"
            android:layout_width="@dimen/match_constraint"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_extended"
            android:layout_marginEnd="@dimen/margin_big"
            android:paddingLeft="@dimen/padding_tiny"
            android:text="@{languageData.title}"
            android:textSize="@dimen/normal_text_size"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/languageImage"
            app:layout_constraintEnd_toStartOf="@+id/languageRating"
            app:layout_constraintStart_toEndOf="@+id/languageImage"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/quoteFrom"
            android:layout_width="@dimen/match_constraint"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_extended"
            android:layout_marginTop="@dimen/margin_minimum"
            android:layout_marginEnd="@dimen/margin_big"
            android:layout_marginBottom="@dimen/margin_default"
            android:paddingLeft="@dimen/padding_tiny"
            android:text="@{languageData.description}"
            android:textSize="@dimen/normal_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/languageImage"
            app:layout_constraintTop_toBottomOf="@+id/quoteDescription" />

        <RatingBar
            android:id="@+id/languageRating"
            style="@style/ratingBarSmallStyle"
            app:languageRating="@{languageData.stars}"
            app:layout_constraintBottom_toBottomOf="@+id/quoteDescription"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/quoteDescription" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>