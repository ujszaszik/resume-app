<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="projectData"
            type="hu.ujszaszik.resumeapp.resume.projects.ProjectData" />
    </data>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/defaultCardViewStyle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/experience_row_colored_layout_width"
                android:layout_height="match_parent"
                android:background="@color/colorAccent"
                android:orientation="vertical" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_default">

                <TextView
                    android:id="@+id/experienceNameText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_minimum"
                    android:text="@{projectData.name}"
                    android:textColor="@color/headings"
                    android:textSize="@dimen/highlighted_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/experienceTitleText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_minimum"
                    android:text="@{projectData.title}"
                    android:textSize="@dimen/title_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/experienceDateText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_minimum"
                    android:text="@{projectData.date}"
                    android:textColor="@color/light_grey" />

                <TextView
                    android:id="@+id/experienceDescriptionText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_default"
                    android:padding="@dimen/padding_minimum"
                    android:textColor="@color/light_grey"
                    app:experienceDescription="@{projectData.description}" />

                <TextView
                    android:id="@+id/experienceRolesText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_default"
                    android:padding="@dimen/padding_minimum"
                    android:textColor="@color/light_grey"
                    app:experienceRoles="@{projectData.roles}" />

                <TextView
                    android:id="@+id/experienceTechnologiesText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_default"
                    android:padding="@dimen/padding_minimum"
                    android:textColor="@color/light_grey"
                    app:experienceTechnologies="@{projectData.technologies}" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>