<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="defaultCardViewStyle" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/card_view_layout_margin</item>
        <item name="cardCornerRadius">@dimen/card_view_corner_radius</item>
        <item name="cardElevation">@dimen/card_view_card_elevation</item>
    </style>

    <style name="overviewLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/overview_layout_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/overview_layout_top_margin</item>
        <item name="android:layout_marginEnd">@dimen/overview_layout_horizontal_margin</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="overviewDelimiterStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/overview_layout_delimiter_height</item>
        <item name="android:layout_marginTop">@dimen/margin_big</item>
        <item name="android:background">@color/grey</item>
    </style>

    <style name="overviewKeyStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/headings</item>
        <item name="android:textSize">@dimen/overview_key_text_size</item>
    </style>

    <style name="overviewValueStyle">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/overview_value_text_size</item>
    </style>

    <style name="profileTitleTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_default</item>
        <item name="android:layout_marginTop">@dimen/margin_big</item>
        <item name="android:layout_marginEnd">@dimen/margin_default</item>
        <item name="android:paddingLeft">@dimen/padding_tiny</item>
        <item name="android:textColor">@color/headings</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ratingBarIndicatorStyle" parent="Widget.AppCompat.RatingBar.Indicator">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_big</item>
        <item name="android:isIndicator">true</item>
        <item name="android:max">5</item>
        <item name="android:numStars">5</item>
        <item name="android:progressBackgroundTint">@color/yellow</item>
        <item name="android:progressTint">@color/yellow</item>
        <item name="android:secondaryProgressTint">@android:color/transparent</item>
        <item name="android:transformPivotX">@dimen/zero</item>
        <item name="android:transformPivotY">@dimen/zero</item>
    </style>

    <style name="ratingBarSmallStyle" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/margin_large</item>
        <item name="android:isIndicator">true</item>
        <item name="android:max">5</item>
        <item name="android:numStars">5</item>
        <item name="android:progressBackgroundTint">@color/yellow</item>
        <item name="android:progressTint">@color/yellow</item>
        <item name="android:secondaryProgressTint">@android:color/transparent</item>
        <item name="android:transformPivotX">@dimen/zero</item>
        <item name="android:transformPivotY">@dimen/zero</item>
    </style>

    <style name="autoCompleteLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_height">@dimen/auto_complete_layout_height</item>
        <item name="android:layout_width">@dimen/match_constraint</item>
        <item name="android:textColorHint">@color/grey</item>
    </style>

    <style name="autoCompleteRowTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/match_constraint</item>
        <item name="android:layout_marginStart">@dimen/margin_extended</item>
        <item name="android:layout_marginEnd">@dimen/margin_extended</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/highlighted_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="autoCompleteTextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_height">@dimen/auto_complete_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">@dimen/auto_complete_bottom_margin</item>
        <item name="android:dropDownHeight">wrap_content</item>
        <item name="android:paddingStart">@dimen/padding_large</item>
        <item name="android:paddingEnd">@dimen/padding_large</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/highlighted_text_size</item>
    </style>

    <style name="signInTitleTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_tiny</item>
        <item name="android:layout_marginEnd">@dimen/margin_tiny</item>
        <item name="android:layout_marginTop">@dimen/login_view_margin</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/big_header_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="loginFieldTextInputLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/login_field_layout_height</item>
        <item name="android:textColorHint">@color/edit_text_hint_selector</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/login_field_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/login_field_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/login_field_corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/login_field_corner_radius</item>
        <item name="boxStrokeWidth">@dimen/zero</item>
        <item name="boxStrokeWidthFocused">@dimen/zero</item>
        <item name="errorEnabled">true</item>
        <item name="hintTextColor">@color/edit_text_hint_selector</item>
        <item name="startIconTint">@color/colorAccent</item>
    </style>

    <style name="loginInputTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/login_field_layout_height</item>
        <item name="android:background">@drawable/input_background</item>
        <item name="android:paddingStart">@dimen/login_text_padding</item>
        <item name="android:paddingEnd">@dimen/login_text_padding</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/input_text_size</item>
    </style>

</resources>